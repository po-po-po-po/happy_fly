.schoollist-head-img{
  width: 100%;
  height: 100rpx;
  padding: 0rpx 10rpx;
  box-sizing: border-box;
}
.schoollist{
  margin-top: 0rpx;
}
.school-list-info{
  float: left;
  margin-left: 20rpx;
  position: relative;
}

.school-list-photo{
  width: 350rpx;
  height: 300rpx;
}
.school-list-desc{
  display: block;
  background-color: #000;
  color: #fff;
  position: absolute;
  bottom: 1%;
  left: 0;
  width: 94%;
  text-align: center;
  padding: 0rpx 10rpx ;
  font-size: 28rpx;
  line-height: 29rpx;
  padding-bottom: 20rpx;
}