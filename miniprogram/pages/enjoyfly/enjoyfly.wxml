<!--列表页-->
<view class='container'>
  <!--等待框-->
  <!--顶部标题栏-->
  <view class='page-header'>
   <text class='page-title'>随心飞查询</text>
  </view>
  <!--列表-->
  <view  wx:for="{{list}}" wx:for-index="bindex"  wx:key="id">
    <!--另一种情况-->
    <!--类型判断,显示不同的数据-->
        <view class='item'>
       <image class='poster' src='{{item.flyIcon}}'></image>
          <view class='meta'>
            <text class='title'>{{item.flyName}}</text>
       <block wx:if="{{item.id == 1}}">
        <!--
              <navigator url="../fly67/fly67?day=6" class="mod-item">
                  <view class="follow1_2 {{item.isFollow ? 'follows' : ''}}" data-id="{{item._id}}" bindtap="handleFollow">
                周六
                  </view>
                      </navigator>
-->
              <navigator url="../fly67/fly67?day=7" class="mod-item">
          <view class="follow1_1 {{item.isFollow ? 'follows' : ''}}" data-id="{{item._id}}" bindtap="handleFollow">
        周日
          </view>
              </navigator>
              </block>
       <block wx:if="{{item.id == 2}}">
              <navigator url="../activity/activity?airline_code={{item.airlinesCode}}" class="mod-item">
                  <view class="follow {{item.isFollow ? 'follows' : ''}}" data-id="{{item._id}}" bindtap="handleFollow">
                早8前航班查询
                  </view>
                      </navigator>
              <navigator url="../activity/activity?airline_code={{item.airlinesCode}}" class="mod-item">
          <view class="follow {{item.isFollow ? 'follows' : ''}}" data-id="{{item._id}}" bindtap="handleFollow">
        晚8后航班查询
          </view>
              </navigator>
              </block>

                  <block wx:if="{{item.id == 3}}">
              <navigator url="../flycq/flycq?airportStartCode=NGB" class="mod-item">
                  <view class="follow3_1 {{item.isFollow ? 'follows' : ''}}" data-id="{{item._id}}" bindtap="handleFollow">
                宁波
                  </view>
                      </navigator>
                      
              <navigator url="../flycq/flycq?airportStartCode=HGH" class="mod-item">
          <view class="follow3_2 {{item.follow3 ? 'follows' : ''}}" data-id="{{item._id}}" bindtap="handleFollow">
        杭州
          </view>
              </navigator>
              
              </block>


          </view>
        </view>
  
  </view>
</view>