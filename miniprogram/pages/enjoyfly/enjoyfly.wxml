<!--列表页-->
<view class='container'>
  <!--等待框-->
  <loading hidden="{{!loading}}">加载中...</loading>
  <!--顶部标题栏-->
  <view class='page-header'>
   <text class='page-title'>随心飞查询</text>
  </view>
  <!--列表-->
  <view class='page-body' wx:for="{{list}}" wx:for-index="bindex"  wx:key="id">
    <!--类型判断,显示不同的数据-->
    <block wx:if="{{type === 'us_box'}}">
      <!--类型判断,显示不同的数据-->
      <navigator url='../airportsdetail/airportsdetail?id={{item.id}}'>
        <view class='item'>
       <image class='poster' src='{{item.airportUrl}}'></image>
          <view class='meta'>
            <text class='title'>{{item.airportName}}</text>
            <view class='artists'>
             <text>{{item.airportCode}}</text>
            </view>
            <view class='rating'>
              <text>执飞航线{{item.id}}1条</text>
            </view>
            <view class='rating'>
            
                <block wx:if="{{item.airportCode == ''}}">
        <navigator url="../activity/activity?airline_code={{item.airlinesCode}}" class="mod-item">
    <view class="follow {{item.isFollow ? 'follows' : ''}}" data-id="{{item._id}}" bindtap="handleFollow">
    <!-- {{item.isFollow ? "已关注" : "关注"}} -->
    {{item.airportCode}}
    </view>
        </navigator>
    </block>
            </view>
          </view>
        </view>
      </navigator>
    </block>
    <!--另一种情况-->
    <block wx:else>
    <!--类型判断,显示不同的数据-->
        <view class='item'>
              <navigator url='../airportsdetail/airportsdetail?id={{item.id}}'>
       <image class='poster' src='{{item.cityUrl}}'></image>
           </navigator>
          <view class='meta'>
            <text class='title'>{{item.flyName}}</text>
                <block wx:if="{{item.id == 1}}">
            <view class='rating1'>
            <view class='rating'>
               <text>周六航班{{item.airportAirwaysNum}}</text>
            </view>
            <view class='rating'>
              <text>周日航班{{item.airportFlightNum}}</text>
            </view>
          </view>
              </block>
          </view>
        </view>
  
    </block>
  </view>
</view>