<scroll-view scroll-y="true" >

<!--筛选框-->
<view class="tabTit box">
  <view class="flex1{{!tab[index]?' active':''}}" wx:for="{{tabTxt}}" wx:key="type" data-index="{{index}}" bindtap="filterTab">
    <text style="font-size:12px">{{item}}</text>
    <image src="/images/arrow-down.png"></image>
  </view>
</view>


<!--筛选项-->
<view class="tabLayer" hidden="{{tab[0]}}">
    <text class="{{flightNameStart==''?'active':''}}" data-id="" data-index="0" data-txt="出发机场" bindtap="filter">不限</text>
    <text class="{{flightNameStart==item.airportAbbreviate?'active':''}}" wx:for="{{airportStartList}}" wx:key="pp" wx:for-item="item" data-id="{{item.airportAbbreviate}}" data-index="0" data-txt="{{item.airportAbbreviate}}" bindtap="filter">{{item.airportAbbreviate}}</text>
</view>

<view class="tabLayer" hidden="{{tab[1]}}">
    <text class="{{flight_date_start==0?'active':''}}" data-id="0" data-index="1" data-txt="起飞时间" bindtap="filter">不限</text>
    <text class="{{flight_date_start==1?'active':''}}" data-id="1" data-index="1" data-txt="00:00-08:00" bindtap="filter">00:00-08:00</text>
    <text class="{{flight_date_start==2?'active':''}}" data-id="2" data-index="1" data-txt="08:00-12:00" bindtap="filter">08:00-12:00</text>
     <text class="{{flight_date_start==3?'active':''}}" data-id="2" data-index="1" data-txt="12:00-20:00" bindtap="filter">12:00-20:00</text>
    <text class="{{flight_date_start==4?'active':''}}" data-id="2" data-index="1" data-txt="20:00-24:00" bindtap="filter">20:00-24:00</text>
</view>

<view class="tabLayer" hidden="{{tab[2]}}">
    <text class="{{sort_id==0?'active':''}}" data-id="0" data-index="2" data-txt="时间排序" bindtap="filter">不限</text>
   <text class="{{sort_id==3?'active':''}}" data-id="3" data-index="2" data-txt="出发机场" bindtap="filter">出发机场</text>
  <text class="{{sort_id==4?'active':''}}" data-id="4" data-index="2" data-txt="到达机场" bindtap="filter">到达机场</text>
</view>

<view class="tabLayer" hidden="{{tab[3]}}">
    <text class="{{flightNameEnd==''?'active':''}}" data-id="" data-index="3" data-txt="到达机场" bindtap="filter">不限</text>
    <text class="{{flightNameEnd==item.airportAbbreviate?'active':''}}" wx:for="{{airportStartList}}" wx:key="pp" wx:for-item="item" data-id="{{item.airportAbbreviate}}" data-index="3" data-txt="{{item.airportAbbreviate}}" bindtap="filter">{{item.airportAbbreviate}}</text>
</view>

<!--航线头-->
  <view class='meta'>
    <text class='title'>{{airwayDetail.airwayNameStart}}</text>
     <image  class="plane" src="http://www.potucs.com:9998/wechat/logo/plane.png" background-size="cover"></image>
       <text class='title'>{{airwayDetail.airwayNameEnd}}</text>
  </view>

<!-- grid   画个重点-->
  <view class="grids">
        <view class="grid" wx:for="{{airwayList}}" wx:key="index" wx:for-index="bindex">
            <view>
                <view class='grid-bg'  bindtap='clickTap' data-bindex='{{bindex}}'>
                        <navigator url='../airwaydetail/airwaydetail?flightNameEnd={{item.airportNameEnd}}&flightNameStart={{item.airportNameStart}}'>
                    <text class="grid-label">{{item.airportNameStart}}---{{item.airportNameEnd}}</text>
                         <text class="grid-label2">{{item.flightNumber}}班</text>
                    </navigator>
                </view>
            </view>
        </view>
    </view>


</scroll-view>