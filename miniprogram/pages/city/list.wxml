<view wx:for="{{flightInfos}}" wx:key="{{item.id}}" class="weui-flex" bindtap="showFlightDetail" data-flight-info="{{item}}" wx:key="id">
	<view class="weui-flex__item text-center">{{item.airlinesName}}</view>
	<view class="weui-flex__item ml-1 text-center">{{item.flightNo}}</view>
	<view class="weui-flex__item text-center">{{item.flightDate}}</view>
	<view class="weui-flex__item text-center">{{item.flightNameStart}}</view>
	<view class="weui-flex__item text-center">{{item.flightNameEnd}}</view>
</view>