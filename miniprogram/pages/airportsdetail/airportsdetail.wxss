/* pages/item/item.wxss */
.meta {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50rpx;
  padding: 0rpx 80rpx;
}
.poster {
  width: 80%;
  height: 60%;
  margin: 20rpx;
}
.title {
  font-size: 40rpx;
  color: rgb(8, 8, 8);
}
.info {
  font-size: 18rpx;
  color: #888;
  margin-top: 20rpx;
  width: 80%;
}
.summary {
  width: 80%;
  margin: 80rpx auto;
}
.label {
  font-size: 30rpx;
  color: rgb(235, 11, 11);
  display: block;
}
.content {
  color: #666;
  font-size: 20rpx;
  padding: 10rpx;
}



/*搜索框*/
.search-top{
  padding: 20rpx;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  display: flex;
}
.search-top navigator{
  width: 20%;
  text-align: center;
}
.search-container{
  width: 100%;
  background-color: #efefef;
  justify-content: center;
  align-items: center;
  padding:10rpx 10rpx 10rpx 20rpx;
  border-radius: 6rpx;
  display: flex;
}
.search-container icon{
  margin-right: 10rpx;
}
.search-container input{
  width: 95%;
}
