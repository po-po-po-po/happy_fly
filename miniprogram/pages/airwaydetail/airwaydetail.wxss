/*首页样式*/

/*单元行*/
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 30rpx;
  border-bottom: 1px solid #e8e8e8;
}

/*航班号*/
.left {
    top:60rpx;
    width: 200rpx;
    height: 100rpx;
    border-radius: 50rpx;
    margin: 20rpx;
}

/*主体*/
.content {
    display: flex;
    flex-direction: column;
    width: 76%;
    padding-left: 20rpx;
}

/*昵称与日期*/
.top, .bottom {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

/*昵称*/
.location {
    color: #4d4d4d;
    font-size: 36rpx;
}

/*日期*/
.datetime {
    padding: 10rpx;
    font-size: 26rpx;
    color: #b2b2b2;
}

/*话语*/
.flighttime {
    color: #f74c31;
    font-size: 28rpx;
    margin-top: 6rpx;
    overflow: hidden; 
    text-overflow: ellipsis; 
    white-space: nowrap;
}
  
  .meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 50rpx 40rpx;
  }

  .title {
    font-size: 42rpx;
    color: #444;
  }
  .info {
    font-size: 18rpx;
    color: #888;
    margin-top: 20rpx;
    width: 80%;
  }